[user]
	name = Ian Thomas
	email = ian@ian-thomas.net
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "status"]
    added = green
    changed = blue
    untracked = red
[color "diff"]
    meta = yellow
    old = red
    new = green
[alias]
    s = status
    st = status
    ci = commit
    co = checkout
    br = branch
    df = diff
    up = push
    down = pull
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    ignorecase = false
[push]
    default = current
